{
  "name": "snap-branch",
  "displayName": "Snap Branch",
  "description": "Automatically save and restore workspace configurations per Git branch",
  "version": "1.0.0",
  "publisher": "QuentinRomeroLauro",
  "repository": {
    "type": "git",
    "url": "https://github.com/QuentinRomeroLauro/snap-branch.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "branch",
    "workspace",
    "configuration",
    "settings"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snapBranch.saveConfig",
        "title": "Save Current Workspace Configuration",
        "category": "Snap Branch"
      },
      {
        "command": "snapBranch.restoreConfig",
        "title": "Restore Workspace Configuration for Current Branch",
        "category": "Snap Branch"
      },
      {
        "command": "snapBranch.showConfigs",
        "title": "Show All Branch Configurations",
        "category": "Snap Branch"
      },
      {
        "command": "snapBranch.deleteConfig",
        "title": "Delete Configuration for Current Branch",
        "category": "Snap Branch"
      },
      {
        "command": "snapBranch.toggle",
        "title": "Toggle Auto Branch Configuration",
        "category": "Snap Branch"
      }
    ],
    "configuration": {
      "title": "Snap Branch",
      "properties": {
        "snapBranch.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save workspace configuration when switching branches"
        },
        "snapBranch.autoRestore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically restore workspace configuration when switching branches"
        },
        "snapBranch.includeOpenFiles": {
          "type": "boolean",
          "default": true,
          "description": "Include open files in workspace configuration"
        },
        "snapBranch.includeEditorLayout": {
          "type": "boolean",
          "default": true,
          "description": "Include editor layout (split view, etc.) in workspace configuration"
        },
        "snapBranch.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show branch configuration status in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#1e90ff",
    "theme": "dark"
  },
  "homepage": "https://github.com/QuentinRomeroLauro/snap-branch",
  "bugs": {
    "url": "https://github.com/QuentinRomeroLauro/snap-branch/issues"
  }
}
